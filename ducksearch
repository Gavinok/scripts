#!/bin/sh

# Gives a dmenu prompt to search DuckDuckGo.
# Without input, will open DuckDuckGo.com.
# Anything else, it search it.

#  pgrep -x dmenu && exit

choice=$(echo "ðŸ¦†" | dmenu -i -p "Search DuckDuckGo:") || exit 1

if [ "$choice" = "ðŸ¦†"  ]; then
	surf -npbS "https://duckduckgo.com"
else
	surf -npSb "$choice"
fi
